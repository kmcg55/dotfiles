# Aliases
alias home='cd ~'
alias root='cd /'
alias dtop='cd ~/Desktop'
alias projects='cd ~/Documents/dev/projects'
alias o=open
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..; cd ..; cd ..'
alias q='exit'
alias c='clear'
# Enable ls deluxe for better directory formatting
alias ls='lsd'
alias cs='clear; ls'
alias lsa='ls -a'
alias lsl='ls -l'
alias t='time'
alias k='kill'
# Let grep be colorful
alias grep='grep --color=auto'
# Will fix later, having permissions issues
alias bashrc='$EDITOR ~/.bashrc'
alias vimrc='$EDITOR ~/.vimrc'
alias zshrc='$EDITOR ~/.zshrc'
